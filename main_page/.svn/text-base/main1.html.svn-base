	<script>
		mui.init({
			swipeBack: false //启用右滑关闭功能
		});

		mui('.mui-scroll-wrapper').scroll({
			deceleration: 0.0006 //flick 减速系数，系数越大，滚动速度越慢，滚动距离越小，默认值0.0006
		});

		mui.plusReady(function() {
			var fkDept = plus.storage.getItem('fkDept');
			var village = plus.storage.getItem('village');
			var param = {};
			if(village == 4) {
				param.xz = fkDept;
			} else {
				param.hjdqh = fkDept;
			}
			$.ajax({
				type: 'POST',
				url: serverURL + "JyZfxxAll/blockCount.do",
				data: param,
				dataType: 'json',
				cache: false,
				contentType: "application/x-www-form-urlencoded; charset=utf-8",
				success: function(result) {
					if(result.ret == 0) {
						//服刑人员和刑释人员
						var data1 = result.content[0];
						$('.jyfxry').html(data1.jyfxry + "人");
						$('.kssfxry').html(data1.kssfxry + "人");
						$('.sqjzfxry').html(data1.sjfxry + "人");
						$('.jyabry').html(data1.jyabry + "人");
						$('.kssabry').html(data1.kssabry + "人");
						$('.sqjzabry').html(data1.sqjzabry + "人");
						//衔接 帮教 安置
						var data2 = result.content[1];
						$('.ljwxj').html(data2.bs_ljWxj + "人");
						$('.ljyxj').html(data2.bs_ljYxj + "人");
						$('.ljwbj').html(data2.bs_ljWbj + "人");
						$('.ljybj').html(data2.bs_ljYbj + "人");
						$('.ljwaz').html(data2.bs_ljWaz + "人");
						$('.ljyaz').html(data2.bs_ljYaz + "人");
						//未分配 预释放
						var data3 = result.content[2];
						$('.wfp').html(data3.wfpNum + "人");
						$('.ysf').html(data3.ysfNum + "人");
					} else {
						alert(window.error(result.ret));
						return;
					}
				}
			});
		});

		mui.plusReady(function() {
			var fkDept = plus.storage.getItem('fkDept');
			var village = plus.storage.getItem('village');
			var data = {};
			data.pageNum = 1;
			data.pageSize = 10;
			if(village == 4) { //乡镇应该是没有未交接的
				data.xz = fkDept;
			} else {
				data.hjdqh = fkDept;
			}
			$.ajax({
				url: serverURL + 'JyZfxxAll/noCheckInfo.do',
				type: 'post',
				data: data,
				//async:false,
				cache: false,
				dataType: 'json',
				success: function(result) {
					$('.dhcNum').html(result.total.toString());
				}
			})
			$.ajax({
				url: serverURL + 'jyZfxx/queryNotHandover.do',
				type: 'post',
				data: data,
				//async:false,
				cache: false,
				dataType: 'json',
				success: function(result) {
					$('.djjNum').html(result.total.toString());
				}
			})
			document.getElementById("dhc").addEventListener('tap', function(e) {
				e.preventDefault();
				e.stopPropagation();
				mui.openWindow({
					url: '../check_page/Check_page.html',
					id: 'Check_page.html',
					styles: {
						top: '0px', //新页面顶部位置
						bottom: '0px', //新页面底部位置
					},
					show: {
						autoShow: true,
						duration: 300,
					},
					waiting: {
						autoShow: true, //自动显示等待框，默认为true
						title: '正在加载...',
						duration: 5000
					}
				})
			})

			document.getElementById("djj").addEventListener('tap', function(e) {
				e.preventDefault();
				e.stopPropagation();
				mui.openWindow({
					url: '../transfer_page/Transfer.html',
